<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
            android:id="@+id/question_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            tools:text="@string/question_australia"/>

    <LinearLayout
            android:id="@+id/answer_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        <Button
                style="?android:buttonStyle"
                android:id="@+id/answer_0_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@string/austrailia_0_answer"/>

        <Button
                style="?android:buttonStyle"
                android:id="@+id/answer_1_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@string/austrailia_1_answer"/>
        <Button
                style="?android:buttonStyle"
                android:id="@+id/answer_2_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@string/austrailia_2_answer"/>
        <Button
                style="?android:buttonStyle"
                android:id="@+id/answer_3_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@string/austrailia_3_answer"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/hint_button"
                style="?android:buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:text="@string/hint_button"/>

        <Button
                android:id="@+id/submit_button"
                style="?android:buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:text="@string/submit_button"/>

    </LinearLayout>
</LinearLayout>